{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es2023"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true,
  }
}